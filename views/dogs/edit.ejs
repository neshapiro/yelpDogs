<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= dog.name %></h1>        
        <div style="width: 30%; margin: 20px auto;">
            <form action="/dogs/<%= dog._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="dog[name]" value="<%= dog.name %>"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="dog[image]" value="<%= dog.image %>"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="dog[breed]" value="<%= dog.breed %>"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="dog[age]" value="<%= dog.age %>"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="dog[desc]" value="<%= dog.desc %>"></input>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">Add Dog</button>
                </div>
            </form>
            <a href="/dogs">Go Back</a>
        </div>
    </div>
</div>


<% include ../partials/footer %>